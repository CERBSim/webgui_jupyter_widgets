{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop":true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,                // fixme
    "disableSizeLimit": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ]
}
